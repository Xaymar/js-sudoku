{
  "include": [
    "./source/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "generated",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "nodenext",
    "outDir": "generated",
    "removeComments": true,
    "rootDir": "source",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020",
    "tsBuildInfoFile": "./generated/.tsbuildinfo",
    "useDefineForClassFields": true,
  }
}